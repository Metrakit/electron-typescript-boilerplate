{
  "name": "electron-typescript-boilerplate",
  "version": "0.0.1",
  "description": "Electron with typescript boilerplate",
  "main": "build/App.js",
  "scripts": {
    "start": "electron .",
    "watch": "gulp watch",
    "postInstall": "typings install && npm install electron -g && npm install electron-packager -g",
    "package": "tsc && electron-packager . --all --prune --overwrite --out=package",
    "package-darwin": "tsc && electron-packager . --platform=darwin --prune --overwrite --out=package",
    "package-linux": "tsc && electron-packager . --platform=linux --prune --overwrite --out=package",
    "package-windows": "tsc && electron-packager . --platform=win32 --prune --overwrite --out=package"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/metrakit/electron-typescript-boilerplate.git"
  },
  "author": "Metrakit",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/metrakit/electron-typescript-boilerplate/issues"
  },
  "homepage": "https://github.com/metrakit/electron-typescript-boilerplate#readme",
  "devDependencies": {
    "devtron": "^1.4.0",
    "electron": "^1.4.16",
    "electron-connect": "^0.6.1",
    "gulp": "^3.9.1",
    "gulp-typescript": "^3.1.6",
    "typings": "^2.1.0",
    "electron-debug": "^1.1.0"
  }
}
