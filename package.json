{
  "name": "electron-typescript-boilerplate",
  "version": "0.0.1",
  "description": "Electron with typescript boilerplate",
  "main": "build/App.js",
  "scripts": {
    "start": "cross-env ELECTRON_ENV=development && electron .",
    "watch": "cross-env ELECTRON_ENV=development && gulp watch",
    "postInstall": "npm install -g typescript && npm install -g electron && npm install -g electron-packager",
    "package": "cross-env ELECTRON_ENV=production && tsc && electron-packager . --all --prune --overwrite --out=package --icon=resources/icon",
    "package-darwin": "cross-env ELECTRON_ENV=production && tsc && electron-packager . --platform=darwin --prune --overwrite --out=package --icon=resources/icon.icns",
    "package-linux": "cross-env ELECTRON_ENV=production && tsc && electron-packager . --platform=linux --prune --overwrite --out=package --icon=resources/icon.ico",
    "package-windows": "cross-env ELECTRON_ENV=production && tsc && electron-packager . --platform=win32 --prune --overwrite --out=package --icon=resources/icon.ico"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/metrakit/electron-typescript-boilerplate.git"
  },
  "author": "Metrakit",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/metrakit/electron-typescript-boilerplate/issues"
  },
  "homepage": "https://github.com/metrakit/electron-typescript-boilerplate#readme",
  "devDependencies": {
    "@types/electron": "^1.4.35",
    "cross-env": "^4.0.0",
    "devtron": "^1.4.0",
    "electron": "^1.4.16",
    "electron-debug": "^1.1.0",
    "gulp": "^3.9.1",
    "gulp-typescript": "^3.1.6",
    "typescript": "^2.2.2"
  },
  "dependencies": {
    "electron-connect": "^0.6.1"
  }
}
