{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "outDir": "build/",
    "lib": [
        "dom",
        "es2015",
        "es5",
        "es6"
    ]
  },
  "exclude": [
    "node_modules",
    "electron-typescript-boilerplate-*",
    "package"
  ]
}
